<p id="notice"><%= notice %></p>
 
<div class="container">
  <h1>Listing Mentors</h1>
</div>

<div id="mentor">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-xs-offset-1 col-md-10 col-md-offset-1">
        <div class="card-deck-wrapper">
              <div class="card-deck">
                <% @mentors.each do |mentor| %>
                <div class="card">
                  <img class="card-img-top" src="<%= mentor.image_url %>" alt="Card image cap">
                  <div class="card-block">
                    <h4 class="card-title"><%= mentor.first_name %></h4>
                    <p class="card-text"><%= mentor.bio %></p>
                    <a href="<%= link_to 'Profile', mentor %>" class="btn btn-primary" >Button</a>
                  </div>
                </div>
               <% end %>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>


<br>

