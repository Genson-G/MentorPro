<p id="notice"><%= notice %></p>

<h1>Listing Mentees</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Bio</th>
      <th>Industry</th>
      <th>Company</th>
      <th>Rating</th>
      <th>Phone number</th>
      <th>Country</th>
      <th>Linkedin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentees.each do |mentee| %>
      <tr>
        <td><%= mentee.user %></td>
        <td><%= mentee.first_name %></td>
        <td><%= mentee.last_name %></td>
        <td><%= mentee.email %></td>
        <td><%= mentee.bio %></td>
        <td><%= mentee.industry %></td>
        <td><%= mentee.company %></td>
        <td><%= mentee.rating %></td>
        <td><%= mentee.phone_number %></td>
        <td><%= mentee.country %></td>
        <td><%= mentee.linkedin %></td>
        <td><%= link_to 'Show', mentee %></td>
        <td><%= link_to 'Edit', edit_mentee_path(mentee) %></td>
        <td><%= link_to 'Destroy', mentee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

